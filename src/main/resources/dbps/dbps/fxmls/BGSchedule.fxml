            <content>
                <Pane fx:id="checkboxPane" prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: #333333">
                    <!-- 체크박스는 동적으로 추가 -->
                </Pane>
            </content>
        </ScrollPane>
        <Button layoutX="340.0" layoutY="520.0" mnemonicParsing="false" text="전송" onMouseClicked="#send"/>
    </children>
